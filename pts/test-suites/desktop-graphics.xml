<?xml version="1.0"?>
<?xml-stylesheet type="text/xsl" href="xsl/pts-suite-viewer.xsl" ?>
<PhoronixTestSuite>
	<SuiteInformation>
		<Version>1.1.0</Version>
		<TestType>System</TestType>
		<Title>Desktop Graphics</Title>
		<Maintainer>Michael Larabel</Maintainer>
		<Description>This test suite contains free and retail graphics tests designed to test out the desktop graphics performance.</Description>
	</SuiteInformation>
	<RunTest>
		<Test>nexuiz</Test>
		<Arguments>+vid_width 2560 +vid_height 1600 +r_hdr 1 -nosound</Arguments>
		<Description>2560 x 1600 w/ HDR</Description>
	</RunTest>
	<RunTest>
		<Test>vdrift</Test>
		<Arguments>2560 1600</Arguments>
		<Description>2560 x 1600</Description>
	</RunTest>
	<RunTest>
		<Test>doom3</Test>
		<Arguments>+set r_customWidth 2560 +set r_customHeight 1600 +set com_machineSpec 3</Arguments>
		<Description>2560 x 1600 - Ultra Quality</Description>
	</RunTest>
	<RunTest>
		<Test>etqw</Test>
		<Arguments>+set r_customWidth 2560 +set r_customHeight 1600</Arguments>
		<Description>2560 x 1600</Description>
	</RunTest>
	<RunTest>
		<Test>unigine-sanctuary</Test>
		<Arguments>-video_width 2560 -video_height 1600</Arguments>
		<Description>2560 x 1600</Description>
	</RunTest>
	<RunTest>
		<Test>unigine-tropics</Test>
		<Arguments>-video_width 2560 -video_height 1600</Arguments>
		<Description>2560 x 1600</Description>
	</RunTest>
	<RunTest>
		<Test>lightsmark</Test>
		<Arguments>2560'x'1600</Arguments>
		<Description>2560 x 1600</Description>
	</RunTest>
	<RunTest>
		<Test>gtkperf</Test>
		<Arguments>DRAWING_PIXBUFS</Arguments>
		<Description>GtkDrawingArea - Pixbufs</Description>
	</RunTest>
	<RunTest>
		<Test>qgears2</Test>
		<Arguments>-render COMPO</Arguments>
		<Description>XRender + Image Scaling</Description>
	</RunTest>
</PhoronixTestSuite>
