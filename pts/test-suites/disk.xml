<?xml version="1.0"?>
<?xml-stylesheet type="text/xsl" href="xsl/pts-suite-viewer.xsl" ?>
<PhoronixTestSuite>
	<SuiteInformation>
		<Version>1.2.0</Version>
		<TestType>Disk</TestType>
		<Title>Disk Test Suite</Title>
		<Maintainer>Michael Larabel</Maintainer>
		<Description>This test suite is designed to contain real-world disk and file-system tests.</Description>
		<RunMode>PCQS</RunMode>
	</SuiteInformation>
	<RunTest>
		<Test>sqlite</Test>
	</RunTest>
	<RunTest>
		<Test>pgbench</Test>
	</RunTest>
	<RunTest>
		<Test>compilebench</Test>
		<Mode>BATCH</Mode>
	</RunTest>
	<RunTest>
		<Test>iozone</Test>
		<Arguments>-r 4k -s 2048M -i0</Arguments>
		<Description>2GB Write Performance</Description>
	</RunTest>
	<RunTest>
		<Test>iozone</Test>
		<Arguments>-r 4k -s 4096M -i0</Arguments>
		<Description>4GB Write Performance</Description>
	</RunTest>
	<RunTest>
		<Test>iozone</Test>
		<Arguments>-r 4k -s 4096M -i0 -i1</Arguments>
		<Description>4GB Read Performance</Description>
	</RunTest>
	<RunTest>
		<Test>iozone</Test>
		<Arguments>-r 4k -s 8192M -i0</Arguments>
		<Description>8GB Write Performance</Description>
	</RunTest>
	<RunTest>
		<Test>iozone</Test>
		<Arguments>-r 4k -s 8192M -i0 -i1</Arguments>
		<Description>8GB Read Performance</Description>
	</RunTest>
	<RunTest>
		<Test>dbench</Test>
		<Arguments>1</Arguments>
		<Description>1 Clients</Description>
	</RunTest>
	<RunTest>
		<Test>dbench</Test>
		<Arguments>12</Arguments>
		<Description>12 Clients</Description>
	</RunTest>
	<RunTest>
		<Test>dbench</Test>
		<Arguments>48</Arguments>
		<Description>48 Clients</Description>
	</RunTest>
	<RunTest>
		<Test>dbench</Test>
		<Arguments>128</Arguments>
		<Description>128 Clients</Description>
	</RunTest>
	<RunTest>
		<Test>fs-mark</Test>
		<Arguments>-s 1048576 -n 1000</Arguments>
		<Description>1000 Files, 1MB Size</Description>
	</RunTest>
	<RunTest>
		<Test>fio</Test>
		<Arguments>examples/iometer-file-access-server</Arguments>
		<Description>Intel IOMeter File Server Access Pattern</Description>
	</RunTest>
	<RunTest>
		<Test>tiobench</Test>
		<Arguments>-k2 -k1 -f 64 -t 32</Arguments>
		<Description>64MB Random Read - 32 Threads</Description>
	</RunTest>
	<RunTest>
		<Test>tiobench</Test>
		<Arguments>-k3 -k2 -f 64 -t 32</Arguments>
		<Description>64MB Random Write - 32 Threads</Description>
	</RunTest>
	<RunTest>
		<Test>postmark</Test>
	</RunTest>
	<RunTest>
		<Test>aio-stress</Test>
		<Arguments>-o 2</Arguments>
		<Description>Random Write</Description>
	</RunTest>
	<RunTest>
		<Test>unpack-linux</Test>
	</RunTest>
	<RunTest>
		<Test>tar-linux</Test>
	</RunTest>
</PhoronixTestSuite>
