<?xml version="1.0"?>
<?xml-stylesheet type="text/xsl" href="xsl/pts-suite-viewer.xsl" ?>
<PhoronixTestSuite>
	<SuiteInformation>
		<Version>1.0.1</Version>
		<TestType>Graphics</TestType>
		<Title>Unigine Test Suite</Title>
		<Maintainer>Michael Larabel</Maintainer>
		<Description>The Unigine suite contains all technology demos from the Unigine Corp's advanced engine. The Unigine engine is very demanding upon the graphics processor.</Description>
	</SuiteInformation>
	<Execute>
		<Test>unigine-sanctuary</Test>
		<Arguments>-video_width $VIDEO_WIDTH -video_height $VIDEO_HEIGHT</Arguments>
		<Description>$VIDEO_WIDTH x $VIDEO_HEIGHT</Description>
	</Execute>
	<Execute>
		<Test>unigine-tropics</Test>
		<Arguments>-video_width $VIDEO_WIDTH -video_height $VIDEO_HEIGHT</Arguments>
		<Description>$VIDEO_WIDTH x $VIDEO_HEIGHT</Description>
	</Execute>
	<Execute>
		<Test>unigine-heaven</Test>
		<Arguments>-video_width $VIDEO_WIDTH -video_height $VIDEO_HEIGHT</Arguments>
		<Description>$VIDEO_WIDTH x $VIDEO_HEIGHT</Description>
	</Execute>
</PhoronixTestSuite>
