<?xml version="1.0"?>
<?xml-stylesheet type="text/xsl" href="xsl/pts-test-profile-viewer.xsl" ?>
<PhoronixTestSuite>
	<TestProfile>
		<Version>0.0.1</Version>
		<TestType>Processor</TestType>
		<SoftwareType>Utility</SoftwareType>
		<License>FREE</License>
		<Status>VERIFIED</Status>
		<Maintainer>Achim Gottinger</Maintainer>
		<EnvironmentSize>10</EnvironmentSize>
                <ExternalDependencies>build-utilities, atlas-development, openmpi-development</ExternalDependencies>
		<ProjectURL>http://icl.cs.utk.edu/hpcc/</ProjectURL>
		<SupportedPlatforms>Linux</SupportedPlatforms>
	</TestProfile>
	<TestInformation>
		<Title>HPC Challenge</Title>
		<Version>1.3.1</Version>
		<TimesToRun>3</TimesToRun>
		<Proportion>HIB</Proportion>
		<Description>The HPC Challenge benchmark consists at this time of 7 benchmarks: HPL, STREAM, RandomAccess, PTRANS, FFTE, DGEMM and b_eff Latency/Bandwidth.</Description>
	</TestInformation>
	<TestSettings>
		<Default>
			<AllowCacheShare>TRUE</AllowCacheShare>
		</Default>
		<Option>
			<DisplayName>Benchmark</DisplayName>
			<Identifier>benchmark</Identifier>
			<Menu>
				<Entry>
					<Name>HPL problem size 1000 block size 80</Name>
					<Value>HPL_Tflops</Value>
				</Entry>
				<Entry>
					<Name>PTRANS</Name>
					<Value>PTRANS_GBs</Value>
				</Entry>
				<Entry>
					<Name>b_eff RandomBandwidth</Name>
					<Value>RandomlyOrderedRingBandwidth_GBytes</Value>
				</Entry>
				<Entry>
					<Name>b_eff RandomLatency</Name>
					<Value>RandomlyOrderedRingLatency_usec</Value>
				</Entry>
				<Entry>
					<Name>b_eff NaturalBandwidth</Name>
					<Value>NaturallyOrderedRingBandwidth_GBytes</Value>
				</Entry>
				<Entry>
					<Name>b_eff NaturalLatency</Name>
					<Value>NaturallyOrderedRingLatency_usec</Value>
				</Entry>
				<Entry>
					<Name>b_eff AvgPingPongBandwidth</Name>
					<Value>AvgPingPongBandwidth_GBytes</Value>
				</Entry>
				<Entry>
					<Name>b_eff AvgPingPongLatency</Name>
					<Value>AvgPingPongLatency_usec</Value>
				</Entry>
				<Entry>
					<Name>STREAM Star Copy</Name>
					<Value>StarSTREAM_Copy</Value>
				</Entry>
				<Entry>
					<Name>STREAM Star Scale</Name>
					<Value>StarSTREAM_Scale</Value>
				</Entry>
				<Entry>
					<Name>STREAM Star Add</Name>
					<Value>StarSTREAM_Add</Value>
				</Entry>
				<Entry>
					<Name>STREAM Star Triad</Name>
					<Value>StarSTREAM_Triad</Value>
				</Entry>
				<Entry>
					<Name>STREAM Single Copy</Name>
					<Value>SingleSTREAM_Copy</Value>
				</Entry>
				<Entry>
					<Name>STREAM Single Scale</Name>
					<Value>SingleSTREAM_Scale</Value>
				</Entry>
				<Entry>
					<Name>STREAM Single Add</Name>
					<Value>SingleSTREAM_Add</Value>
				</Entry>
				<Entry>
					<Name>STREAM Single Triad</Name>
					<Value>SingleSTREAM_Triad</Value>
				</Entry>
				<Entry>
					<Name>RandomAccess Star</Name>
					<Value>StarRandomAccess_GUPs</Value>
				</Entry>
				<Entry>
					<Name>RandomAccess Single</Name>
					<Value>SingleRandomAccess_GUPs</Value>
				</Entry>
				<Entry>
					<Name>RandomAccess MPI</Name>
					<Value>MPIRandomAccess_GUPs</Value>
				</Entry>
				<Entry>
					<Name>FFT Star</Name>
					<Value>StarFFT_Gflops</Value>
				</Entry>
				<Entry>
					<Name>FFT Single</Name>
					<Value>SingleFFT_Gflops</Value>
				</Entry>
				<Entry>
					<Name>FFT MPI</Name>
					<Value>MPIFFT_Gflops</Value>
				</Entry>
				<Entry>
					<Name>DGEMM Star</Name>
					<Value>StarDGEMM_Gflops</Value>
				</Entry>
				<Entry>
					<Name>DGEMM Single</Name>
					<Value>SingleDGEMM_Gflops</Value>
				</Entry>
				
			</Menu>
		</Option>
	</TestSettings>
</PhoronixTestSuite>
