<?xml version="1.0"?>
<?xml-stylesheet type="text/xsl" href="xsl/pts-test-profile-viewer.xsl" ?>
<PhoronixTestSuite>
	<TestProfile>
		<Version>1.0.0</Version>
		<TestType>Graphics</TestType>
		<SoftwareType>Game</SoftwareType>
		<License>NON-FREE</License>
		<Status>VERIFIED</Status>
		<Maintainer>Michael Larabel</Maintainer>
		<EnvironmentSize>138</EnvironmentSize>
		<SupportedArchitectures>x86, x86_64</SupportedArchitectures>
		<ProjectURL>http://www.unigine.com/</ProjectURL>
		<SupportedPlatforms>Linux</SupportedPlatforms>
	</TestProfile>
	<TestInformation>
		<Title>Unigine Heaven</Title>
		<Version>1.1</Version>
		<ResultScale>Frames Per Second</ResultScale>
		<TimesToRun>3</TimesToRun>
		<Proportion>HIB</Proportion>
		<Description>This test calculates the average frame-rate within the Heaven demo for the Unigine engine. This engine is extremely demanding on the system's graphics card.</Description>
	</TestInformation>
	<TestSettings>
		<Default>
			<Arguments>-video_app opengl -data_path ../ -sound_app null -system_script heaven/unigine.cpp</Arguments>
			<PostArguments>-video_mode -1 -video_fullscreen 1 -video_multisample 0 -extern_define PHORONIX</PostArguments>
		</Default>
		<Option>
			<DisplayName>Tessellator</DisplayName>
			<Identifier>tessellator</Identifier>
			<ArgumentPrefix>-engine_config </ArgumentPrefix>
			<Menu>
				<Entry>
					<Name>Enabled</Name>
					<Value>heaven_pts_tessellated.cfg</Value>
				</Entry>
				<Entry>
					<Name>Disabled</Name>
					<Value>heaven_pts_no_tessellated.cfg</Value>
				</Entry>
			</Menu>
		</Option>
		<Option>
			<DisplayName>Resolution</DisplayName>
			<Identifier>auto-resolution</Identifier>
			<Menu>
				<Entry>
					<Name>$VIDEO_WIDTH x $VIDEO_HEIGHT</Name>
					<Value>-video_width $VIDEO_WIDTH -video_height $VIDEO_HEIGHT</Value>
				</Entry>
			</Menu>
		</Option>
	</TestSettings>
</PhoronixTestSuite>
