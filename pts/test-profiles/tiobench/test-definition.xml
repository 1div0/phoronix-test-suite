<?xml version="1.0"?>
<?xml-stylesheet type="text/xsl" href="xsl/pts-test-profile-viewer.xsl" ?>
<PhoronixTestSuite>
	<TestProfile>
		<Version>1.1.0</Version>
		<TestType>Disk</TestType>
		<SoftwareType>Utility</SoftwareType>
		<License>FREE</License>
		<Status>VERIFIED</Status>
		<Maintainer>Michael Larabel</Maintainer>
		<EnvironmentSize>0.2</EnvironmentSize>
		<ProjectURL>http://sourceforge.net/projects/tiobench/</ProjectURL>
		<ExternalDependencies>build-utilities</ExternalDependencies>
	</TestProfile>
	<TestInformation>
		<Title>Threaded I/O Tester</Title>
		<AppVersion>0.3.3</AppVersion>
		<TimesToRun>4</TimesToRun>
		<ResultScale>MB/s</ResultScale>
		<Proportion>HIB</Proportion>
		<Description>Tiotester (Threaded I/O Tester) benchmarks the hard disk drive / file-system performance.</Description>
	</TestInformation>
	<TestSettings>
		<Option>
			<DisplayName>Test</DisplayName>
			<Identifier>test-item</Identifier>
			<Menu>
				<Entry>
					<Name>Write</Name>
					<Value>-k3 -k2 -k1</Value>
				</Entry>
				<Entry>
					<Name>Random Write</Name>
					<Value>-k3 -k2</Value>
				</Entry>
				<Entry>
					<Name>Read</Name>
					<Value>-k3 -k1</Value>
				</Entry>
				<Entry>
					<Name>Random Read</Name>
					<Value>-k2 -k1</Value>
				</Entry>
			</Menu>
		</Option>
		<Option>
			<DisplayName>Size Per Thread</DisplayName>
			<Identifier>filesize-per-thread</Identifier>
			<ArgumentPrefix>-f </ArgumentPrefix>
			<Menu>
				<Entry>
					<Name>32MB</Name>
					<Value>32</Value>
				</Entry>
				<Entry>
					<Name>64MB</Name>
					<Value>64</Value>
				</Entry>
				<Entry>
					<Name>128MB</Name>
					<Value>128</Value>
				</Entry>
				<Entry>
					<Name>256MB</Name>
					<Value>256</Value>
				</Entry>
			</Menu>
		</Option>
		<Option>
			<DisplayName>Thread Count</DisplayName>
			<Identifier>thread-count</Identifier>
			<ArgumentPrefix>-t </ArgumentPrefix>
			<Menu>
				<Entry>
					<Name>4</Name>
					<Value>4</Value>
				</Entry>
				<Entry>
					<Name>8</Name>
					<Value>8</Value>
				</Entry>
				<Entry>
					<Name>16</Name>
					<Value>16</Value>
				</Entry>
				<Entry>
					<Name>32</Name>
					<Value>32</Value>
				</Entry>
			</Menu>
		</Option>
	</TestSettings>
</PhoronixTestSuite>
